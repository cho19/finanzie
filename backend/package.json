{
  "name": "finanzie-backend",
  "version": "0.1.0",
  "description": "backend piece for the finanzie utility app",
  "main": "dist/index.js",
  "repository": "https://github.com/cho19/finanzie",
  "author": "cho19",
  "license": "MIT",
  "private": true,
  "scripts": {
    "typeorm-cli": "ts-node node_modules/.bin/typeorm",
    "db:migrate-generate": "yarn typeorm-cli migration:generate -d src/migrations",
    "db:migrate-dev": "yarn typeorm-cli migration:run",
    "db:test:migrate": "env DB_NAME=finanzie_test yarn typeorm-cli migration:run",
    "db:migrate-revert-dev": "yarn typeorm-cli migration:revert",
    "db:test:migrate-revert": "env DB_NAME=finanzie_test yarn typeorm-cli migration:revert",
    "db:migrate-revert": "yarn db:migrate-revert-dev && yarn db:test:migrate-revert",
    "db:migrate": "yarn db:migrate-dev && yarn db:test:migrate",
    "dev": "ts-node-dev --ignore-watch node_modules --clear --no-notify ./src/index.ts",
    "build": "tsc -p .",
    "start": "node ./dist/index.js",
    "lint": "eslint src/**/*.ts --ext ts",
    "coverage-badge": "coverage-badger -r coverage/clover.xml -d .",
    "test": "env DB_NAME=finanzie_test jest --runInBand",
    "test:dev": "env DB_NAME=finanzie_test jest --watch -o --runInBand",
    "test:coverage": "yarn test --coverage && yarn coverage-badge"
  },
  "devDependencies": {
    "@types/jest": "^25.1.3",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "apollo-server-testing": "^2.10.1",
    "coverage-badger": "^1.0.1",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^7.0.0",
    "eslint-plugin-import": "^2.20.1",
    "jest": "^25.1.0",
    "mockdate": "^2.0.5",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.6.2",
    "ts-node-dev": "^1.0.0-pre.52",
    "typescript": "^3.8.2"
  },
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.2",
    "@types/graphql-upload": "^8.0.3",
    "@types/passport": "^1.0.2",
    "@types/pg": "^7.14.1",
    "@types/uuid": "^7.0.0",
    "apollo-server-express": "^2.10.1",
    "aws-sdk": "^2.628.0",
    "bcrypt": "^4.0.1",
    "class-validator": "^0.11.0",
    "dayjs": "^1.8.20",
    "express": "^4.17.1",
    "graphql": "^14.6.0",
    "graphql-upload": "^10.0.0",
    "passport": "^0.4.1",
    "pg": "^7.18.2",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.22",
    "uuid": "^7.0.1"
  }
}
