{
  "name": "finanzie-backend",
  "version": "0.1.0",
  "description": "backend piece for the finanzie utility app",
  "main": "dist/index.js",
  "repository": "https://github.com/cho19/finanzie",
  "author": "cho19",
  "license": "MIT",
  "private": true,
  "scripts": {
    "typeorm-cli": "ts-node node_modules/.bin/typeorm",
    "db:migrate": "yarn typeorm-cli migration:run",
    "db:migrate-test": "env DB_NAME=finanzie_test yarn typeorm-cli migration:run",
    "dev": "nodemon -e ts --watch src --exec \"ts-node ./src/index.ts\"",
    "build": "tsc -p .",
    "start": "node ./dist/index.js",
    "lint": "eslint src/**/*.ts --ext ts",
    "test": "env DB_NAME=finanzie_test jest --runInBand",
    "test:dev": "env DB_NAME=finanzie_test jest --watch -o --runInBand"
  },
  "devDependencies": {
    "@types/jest": "^25.1.3",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^7.0.0",
    "eslint-plugin-import": "^2.20.1",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.2"
  },
  "dependencies": {
    "@types/express": "^4.17.2",
    "apollo-server-express": "^2.10.1",
    "apollo-server-testing": "^2.10.1",
    "express": "^4.17.1",
    "graphql": "^14.6.0",
    "pg": "^7.18.2",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.22"
  }
}
