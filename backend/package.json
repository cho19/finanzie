{
  "name": "balans-backend",
  "version": "0.1.0",
  "description": "backend piece for the balans utility app",
  "main": "dist/index.js",
  "repository": "https://github.com/iaacosta/balans",
  "author": "iaacosta",
  "license": "MIT",
  "private": true,
  "scripts": {
    "typeorm-cli": "ts-node node_modules/.bin/typeorm",
    "db:migrate-generate": "yarn typeorm-cli migration:generate -d src/migrations",
    "db:migrate": "yarn typeorm-cli migration:run",
    "db:drop": "yarn typeorm-cli schema:drop",
    "db:migrate-revert": "yarn typeorm-cli migration:revert",
    "db:test:migrate": "NODE_ENV=test yarn typeorm-cli migration:run",
    "db:test:drop": "NODE_ENV=test yarn typeorm-cli schema:drop",
    "db:test:migrate-revert": "NODE_ENV=test yarn typeorm-cli migration:revert",
    "db:all:migrate": "yarn db:migrate && yarn db:test:migrate",
    "db:all:migrate-revert": "yarn db:migrate-revert && yarn db:test:migrate-revert",
    "db:all:drop": "yarn db:drop && yarn db:test:drop",
    "dev": "ts-node-dev --ignore-watch node_modules --clear --no-notify ./src/index.ts",
    "cypress:dev": "NODE_ENV=cypress yarn dev",
    "build": "tsc -p .",
    "start": "node ./dist/index.js",
    "lint": "eslint src/**/*.ts --ext ts",
    "coverage-badge": "coverage-badger -r coverage/clover.xml -d .",
    "test": "NODE_ENV=test jest --runInBand",
    "test:dev": "NODE_ENV=test jest --watch -o --runInBand",
    "test:coverage": "yarn test --coverage && yarn coverage-badge"
  },
  "devDependencies": {
    "@jackfranklin/test-data-bot": "^1.3.0",
    "@types/jest": "^25.1.3",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "apollo-server-testing": "^2.10.1",
    "coverage-badger": "^1.0.1",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^7.0.0",
    "eslint-plugin-import": "^2.20.1",
    "jest": "^25.1.0",
    "mockdate": "^2.0.5",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.6.2",
    "ts-node-dev": "^1.0.0-pre.52",
    "wait-on": "^5.1.0"
  },
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.2",
    "@types/graphql-upload": "^8.0.3",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.157",
    "@types/passport": "^1.0.2",
    "@types/passport-http-bearer": "^1.0.35",
    "@types/pg": "^7.14.1",
    "@types/pluralize": "^0.0.29",
    "@types/uuid": "^7.0.0",
    "apollo-server-express": "^2.14.2",
    "aws-sdk": "^2.628.0",
    "bcrypt": "^5.0.0",
    "class-validator": "^0.11.0",
    "dayjs": "^1.8.20",
    "express": "^4.17.1",
    "graphql": "^15.3.0",
    "graphql-upload": "^10.0.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.19",
    "passport": "^0.4.1",
    "passport-http-bearer": "^1.0.1",
    "pg": "^7.18.2",
    "pluralize": "^8.0.0",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.0.0-rc.3",
    "typeorm": "^0.2.22",
    "typescript": "^3.8.2",
    "uuid": "^7.0.1"
  }
}
